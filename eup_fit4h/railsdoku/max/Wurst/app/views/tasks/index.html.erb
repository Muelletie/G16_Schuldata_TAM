<p id='notice'> <%= notice %> </p>
 <h1> tasks </h1>
 <table>
 <thead>
 <tr>
 <th> title </th>
 <th> description </th>
 <th> start date </th>
 <th> end date </th>
 <th> project </th>
 <th colspan='3'></th>
 </tr>
 </thead>
 <tbody>
 <% @tasks.each do |task| %>
 <tr>
 <td> <%= task.title %> </td>
 <td> <%= task.description %> </td>
 <td> <%= task.start_date %> </td>
 <td> <%= task.end_date %> </td>
 <td> <%= task.project_id %> </td>
 <td> <%= link_to 'show' , project_task_path(@project.id , task.id) %> </td>
 <td> <%= link_to 'Edit', edit_project_task_path(@project.id , task.id) %> </td>
 <td> <%= link_to 'Destroy', project_task_path(@project.id , task.id) , method: :delete, data: { confirm: 'Are you sure?' } %> </td>
 </tr>
 <% end %>
 </tbody>
 </table>
 <br />
 <%= link_to 'new task', new_project_task_path , :class => 'button' %>
 <%= link_to 'back' , project_path(@project.id) , :class => 'button' %>
